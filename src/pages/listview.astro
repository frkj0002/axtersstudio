            <H2 tekst="Alle produkter"/>
        </button>
        <button>
            <H2 tekst="cuffs"/>
        </button>
        <button>
            <H2 tekst="vedhæng"/>
        </button> -->
    </section>
    <section class="grid grid-cols-2 md:grid-cols-4 justify-between gap-xxs md:gap-xs mb-3xl md:mb-[262px]">
        <Card/>
        <Card/>
        <Card/>
        <Card/>
        <Card/>
        <Card/>
        <Card/>
        <Card/>
        <Card/>
        <Card/>
    </section>
</section>


</MainLayout>